@{
}
@model List<Book>

<p><h2>Get All The Book</h2></p>


    <div>
        <table class="table teble-border table-responsive"> 
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    IsAvailable
                </th>
                <th>
                    View
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   <td>
                        @item.Name
                   </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.IsAvailable
                    </td>
                    <td>
                        <a asp-controllers="Book" asp-action="GetBook" asp-route-id="@item.Id"> Details </a>
                    </td>
                    <td>
                        <a asp-controllers="Book" asp-action="UpdateBook" asp-route-id="@item.Id"> Edit </a>
                    </td>
                    <td>
                        <a asp-controllers="Book" asp-action="DeleteBook" asp-route-id="@item.Id"> Delete </a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
   